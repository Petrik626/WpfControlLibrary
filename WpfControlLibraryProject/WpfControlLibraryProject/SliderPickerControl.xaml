<UserControl x:Class="WpfControlLibraryProject.SliderPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfControlLibraryProject"
             mc:Ignorable="d" 
             Name="sliderPicker"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
    </UserControl.Resources>
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"></RowDefinition>
            <RowDefinition Height="0.4*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox x:Name="ContentTextBox" Grid.Row="0" Text="{Binding ElementName=sliderPicker, Path=ContentValueSlider}" TextAlignment="Center" FontSize="22" FontFamily="Times New Roman" IsReadOnly="True"></TextBox>
        <Slider x:Name="SliderElement" Grid.Row="1" Margin="10,50,10,50" Value="{Binding ElementName=sliderPicker, Path=SliderValue}" Minimum="{Binding ElementName=sliderPicker, Path=MinimumValue}" Maximum="{Binding ElementName=sliderPicker, Path=MaximumValue}" SmallChange="{Binding ElementName=sliderPicker, Path=SmallChangeValue}" LargeChange="{Binding ElementName=sliderPicker, Path=LargeChangeValue}"></Slider>
    </Grid>
</UserControl>
