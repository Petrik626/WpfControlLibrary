<UserControl x:Class="WpfControlLibraryProject.SliderPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfControlLibraryProject"
             mc:Ignorable="d" 
             Name="sliderPicker"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"></RowDefinition>
            <RowDefinition Height="0.4*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox x:Name="ContentTextBox" Grid.Row="0" Text="{Binding ElementName=sliderPicker, Path=SliderValue}" TextAlignment="Center" FontSize="22" FontFamily="Times New Roman"></TextBox>
        <Slider x:Name="SliderElement" Grid.Row="1" Margin="10,0,10,0" Value="{Binding ElementName=sliderPicker, Path=SliderValue}" Minimum="0" Maximum="300"></Slider>
    </Grid>
</UserControl>
